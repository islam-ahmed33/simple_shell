#include "shell.h"

/**
* _getline - Read The Input By User From Stdin
* Return: Input
*/
void assign_lineptr(char **lineptr, size_t *n, char *buff, size_t b);
ssize_t _getline(char **lineptr, size_t *n, int sd)
{
    char *buff = NULL;
    size_t i = 0, c = 0;
    ssize_t count;

    if (!lineptr || !n)
        return (-1);

    do {
        if (i == c)
        {
            c = c * 2 + 1;
            buff = realloc(buff, c);
            if (!buff)
                return (-1);
        }

        count = read(sd, buff + i, c - i);
        if (count < 0)
        {
            free(buff);
            return (-1);
        }
        i += count;
    } while (count > 0 && buff[i - 1] != '\n');

    if (i == 0)
        return (-1);

    if (buff[i - 1] == '\n')
        i--;

    buff[i] = '\0';

    assign_lineptr(lineptr, n, buff, i);

    return (i);
}

/**
 * hashtag_handle - remove everything after #
 * @buff: input;
 * Return:void
 */
void assign_lineptr(char **lineptr, size_t *n, char *buff, size_t b)
{
    if (!lineptr || !n || !buff)
        return;

    if (*lineptr)
        free(*lineptr);

    *lineptr = buff;
